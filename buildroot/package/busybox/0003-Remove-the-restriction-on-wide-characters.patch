From 3e5c6be584c85bb612b31d74d23a758b824c1445 Mon Sep 17 00:00:00 2001
From: "zhichong.chen" <zhichong.chen@amlogic.com>
Date: Mon, 16 Nov 2020 14:32:07 +0800
Subject: [PATCH] Remove the restriction on wide characters.

Signed-off-by: zhichong.chen <zhichong.chen@amlogic.com>
---
 libbb/printable_string.c | 6 +++---
 libbb/unicode.c          | 4 ++--
 2 files changed, 5 insertions(+), 5 deletions(-)

diff --git a/libbb/printable_string.c b/libbb/printable_string.c
index a814fd0..7d34895 100644
--- a/libbb/printable_string.c
+++ b/libbb/printable_string.c
@@ -28,8 +28,8 @@ const char* FAST_FUNC printable_string2(uni_stat_t *stats, const char *str)
 		}
 		if (c < ' ')
 			break;
-		if (c >= 0x7f)
-			break;
+		/* if (c >= 0x7f) */
+		/*	break; */
 		s++;
 	}
 
@@ -42,7 +42,7 @@ const char* FAST_FUNC printable_string2(uni_stat_t *stats, const char *str)
 			unsigned char c = *d;
 			if (c == '\0')
 				break;
-			if (c < ' ' || c >= 0x7f)
+			if (c < ' ')
 				*d = '?';
 			d++;
 		}
diff --git a/libbb/unicode.c b/libbb/unicode.c
index 89d4217..d0e7cf4 100644
--- a/libbb/unicode.c
+++ b/libbb/unicode.c
@@ -1019,7 +1019,7 @@ static char* FAST_FUNC unicode_conv_to_printable2(uni_stat_t *stats, const char
 					while ((int)--width >= 0);
 					break;
 				}
-				*d++ = (c >= ' ' && c < 0x7f) ? c : '?';
+				*d++ = (c >= ' ') ? c : '?';
 				src++;
 			}
 			*d = '\0';
@@ -1027,7 +1027,7 @@ static char* FAST_FUNC unicode_conv_to_printable2(uni_stat_t *stats, const char
 			d = dst = xstrndup(src, width);
 			while (*d) {
 				unsigned char c = *d;
-				if (c < ' ' || c >= 0x7f)
+				if (c < ' ')
 					*d = '?';
 				d++;
 			}
